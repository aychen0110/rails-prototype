= form_for @bit, remote: true do |f|
  
  - if @bit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bit.errors.count, "error")} prohibited this bit from being saved:"
      %ul
        - @bit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_area :content
     
  .actions
    = f.submit 'Save'
